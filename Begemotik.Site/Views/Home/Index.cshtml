@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <style>
        a.classname {
            background: url(https://dev.twitter.com/sites/default/files/images_documentation/sign-in-with-twitter-gray.png) no-repeat top left;
            display: block;
            width: 160px;
            height: 150px;
            text-indent: -9999px; /* hides the link text */
        }

        .content {
            width: 400px;
        }

        .center {
            margin: 0px auto;
        }
    </style>
</head>
<body>
    <div>
        <h3>Begemotik - give it a go, see yourself.</h3>
    </div>
    <div>

        @if (this.Request.IsAuthenticated)
        {
            <span>Hi, <b>@@@HttpContext.Current.User.Identity.Name </b>what are you up to today.</span>
            <div class="createNew">

                @using (Html.BeginForm("PostStartTweet", "Tweet", new { username = HttpContext.Current.User.Identity.Name }, FormMethod.Post))
                {
                    <div class="center content">
                        <table>
                            <tr>
                                <td>
                                    <label for="period">Period</label>
                                </td>
                                <td>
                                    <select id="ddlPeriod" name="period">
                                        <option value="1">hour</option>
                                        <option value="2">half hour</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="period">Hash</label></td>
                                <td>#<input id="txtHash" name="hash" type="text" /></td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="status">Anything you want to add</label></td>
                                <td>
                                    <textarea id="txtStatus" name="status" cols="25" rows="3"></textarea></td>
                            </tr>
                        </table>
                        <input id="btnSubmit" type="submit" value="Hijack !" />
                    </div>
                }

            </div>
        
        }
        else
        {
            
            @Html.ActionLink("Sign in with Twitter", "Authorize", "Auth", null, new { @class = "classname" });

        }
    </div>
</body>
</html>
